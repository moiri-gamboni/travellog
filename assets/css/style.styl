[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}
*, 
*:after,
*::before
	box-sizing:border-box
.move-up
	top: 100px
.fade
	opacity: 1;
	transition: opacity .25s ease-in-out;
	-moz-transition: opacity .25s ease-in-out;
	-webkit-transition: opacity .25s ease-in-out;
#container
	position:absolute
	overflow-x:hidden
	overflow-y:hidden
	height:100%
	width:100%
	top:0
	left:0
	background: url('http://data1.whicdn.com/images/29440241/1277651095-OD4KRDG_original.jpg')
	background-position:center
	background-repeat:no-repeat
	background-size:cover
	.log-details
		width: calc(100% - 100px)
		height: calc(100% - 130px)
		position: absolute
		margin-left: 50px
		margin-top: 50px
		padding: 40px 50px
		&.animate
			-webkit-transition: all 0.5s ease
			-moz-transition: all 0.5s ease
			-o-transition: all 0.5s ease
			transition: all 0.5s ease
		&.launch
			left:-200%	
		.log-title
			font-family: 'Roboto', sans-serif
			text-transform: uppercase
			font-size: 2em
			color: white
		.log-author
			font-family: 'Roboto', sans-serif
			text-transform:uppercase
			font-size:1.2em
			color:#FF0066
			font-weight:100
		.log-content
			font-family: 'Fenix', serif
			color: white
			line-height: 1.3em
			height: calc(100% - 50px)
		#log-wrapper
			height: calc(100% - 100px)
			margin-top: 100px
			overflow: scroll
			padding-right: 30px
	#blackshade
		height:100%
		width:100%
		position:absolute
		background-color:black
		opacity: 0.6
	#nav
		width: calc(100% - 100px)
		padding-left:50px
		margin-left:50px
		margin-top:100px
		position:absolute
		img
			height:30px
			margin-right:10px
	#country
		font-family: 'Roboto', sans-serif;
		text-transform: uppercase;
		font-size: 2em;
		color: #fff;
		position: absolute;
		width: calc(100% - 100px);
		padding-right: 50px;
		margin-top: 100px;
		text-align: right;
	.sidenav
		background:rgba(225,225,225,0.6)
		position:absolute
		-webkit-transition:all 0.2s ease-in-out;
		-moz-transition:all 0.2s ease-in-out;
		-o-transition:all 0.2s ease-in-out;
		transition:all 0.2s ease-in-out;
		&:hover
			background:rgba(225,225,225,0.8)
	.sidenav-top
		width:100%
		height:50px
		top:0
		border-bottom:solid 1px white
	.sidenav-bottom
		width:100%
		height:50px
		bottom:0
		border-top:solid 1px white
	.sidenav-left
		width:50px
		height:100%
		left:0
		border-right:solid 1px white
	.sidenav-right
		height:100%
		width:50px
		right:0
		border-left:solid 1px white
	
@media (min-height:480px)
	#container 
		.log-details
			padding: 30px 50px
			.log-content
				margin-top: 20px
				height: calc(100% - 140px)

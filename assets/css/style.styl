[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}
*, 
*:after,
*::before
	box-sizing:border-box
*::-webkit-scrollbar 
	width: 3px
*::-webkit-scrollbar-track
 	background-color: transparent
*::-webkit-scrollbar-track-piece 
	background-color: transparent
*::-webkit-scrollbar-thumb 
	height: 15px
	background-color: #fff
	border-radius: 15px
*::-webkit-scrollbar-corner
	background-color: transparent

.move-up
	top: 100px
.fade
	opacity: 1;
	transition: opacity .25s ease-in-out;
	-moz-transition: opacity .25s ease-in-out;
	-webkit-transition: opacity .25s ease-in-out;
.fadeout
	opacity:0
#container
	position:absolute
	overflow-x:hidden
	overflow-y:hidden
	height:100%
	width:100%
	top:0
	left:0
	background: url('http://data1.whicdn.com/images/29440241/1277651095-OD4KRDG_original.jpg')
	background-position:center
	background-repeat:no-repeat
	background-size:cover
	.log-details
		width: calc(100% - 100px)
		height: calc(100% - 130px)
		position: absolute
		margin-left: 50px
		margin-top: 50px
		&.animate
			-webkit-transition: all 0.5s ease
			-moz-transition: all 0.5s ease
			-o-transition: all 0.5s ease
			transition: all 0.5s ease
		&.launch
			left:-200%	
		.log-title
			font-family: 'Roboto', sans-serif
			text-transform: uppercase
			font-size: 1.8em
			color: white
		.log-author
			font-family: 'Roboto', sans-serif
			text-transform:uppercase
			font-size:1.2em
			color:#FF0066
			font-weight:100
		.log-content
			font-family: 'Fenix', serif
			color: white
			line-height: 1.3em
			height: calc(100% - 50px)
			img
				width: 100%;
				height: auto;
		#log-wrapper
			height: calc(100% - 100px)
			margin-top: 100px
			overflow-y: scroll
			overflow-x: none
			padding-right: 30px
	#blackshade
		height:100%
		width:100%
		position:absolute
		background-color:black
		opacity: 0.6
	#nav
		width: calc(100% - 100px)
		padding-left:90px
		margin-top:70px
		position:absolute
		img
			height:30px
			margin-right:10px
	#country
		font-family: 'Roboto', sans-serif
		text-transform: uppercase
		font-size: 2.2em
		color: #999
		position: absolute
		width: 300px
		right: 75px
		margin-top: 60px
		text-align: right
		-webkit-transition:all 0.2s ease-in-out;
		-moz-transition:all 0.2s ease-in-out;
		-o-transition:all 0.2s ease-in-out;
		transition:all 0.2s ease-in-out;
	.sidenav
		background:rgba(225,225,225,0.8)
		opacity: 0.8
		position:absolute
		-webkit-transition:all 0.2s ease-in-out
		-moz-transition:all 0.2s ease-in-out
		-o-transition:all 0.2s ease-in-out
		transition:all 0.2s ease-in-out
		&:hover
			opacity: 1
	.sidenav-top
		width:100%
		height:50px
		top:0
		border-bottom:solid 1px white
	.sidenav-bottom
		width:100%
		height:50px
		bottom:0
		border-top:solid 1px white
	.sidenav-left
		width:50px
		height:100%
		left:0
		border-right:solid 1px white
	.sidenav-right
		height:100%
		width:50px
		right:0
		border-left:solid 1px white
	.arrow
		width: 0
		height: 0
		position: absolute
		opacity: 0.8
		&.arrow-up-down
			border-left: 20px solid transparent
			border-right: 20px solid transparent
			right:50%
			margin-right:-10px
		&.arrow-left-right
			border-top: 20px solid transparent
			border-bottom: 20px solid transparent
			top:50%
			margin-top:-10px
		&.arrow-up		
			border-bottom: 20px solid #fff
			margin-top: 15px
		&.arrow-down
			border-top: 20px solid #fff
			bottom:0
			margin-bottom: 15px
		&.arrow-right
			border-left: 20px solid #fff
			right:0
			margin-right: 15px
		&.arrow-left 
			border-right:20px solid #fff
			left:0
			margin-left: 15px

@media (min-height:480px)
	#container 
		.log-details
			padding: 30px 50px 30px 90px;
			.log-content
				margin-top: 20px
				height: calc(100% - 140px)
